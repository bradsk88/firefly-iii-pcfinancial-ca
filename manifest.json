{
  "name": "My Firefly III OAuth2 Extension",
  "version": "1.0",
  "description": "Description goes here",
  "permissions": [
    "storage",
    "tabs"
  ],
  "options_page": "options.html",
  "optional_host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "./dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://secure.pcfinancial.ca/en/my/dashboard"],
      "js": ["./dist/auto.js", "./dist/accounts.js"]
    },
    {
      "matches": ["https://*.example.com/*"],
      "js": ["./dist/transactions.js"]
    },
    {
      "matches": ["https://*.example.com/*"],
      "js": ["./dist/opening.js"]
    }
  ],
  "action": {
    "default_popup": "options.html"
  },
  "manifest_version": 3
}